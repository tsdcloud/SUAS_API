{
  "watch": [
    "*.js",
    "routes/",
    "controllers/",
    "models/",
    "middleware/",
    "utils/",
    "config/"
  ],
  "ignore": [
    "node_modules/",
    "logs/",
    "*.test.js",
    "*.spec.js",
    "public/",
    "docs/",
    ".git",
    "prisma/migrations/"
  ],
  "ext": "js,json,prisma",
  "delay": "500",
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  }
} 